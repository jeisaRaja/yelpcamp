<% layout('/layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheet/star.css">  
    <div class="row">
        <h1 class="text-center mb-3">Edit Your Review</h1>

            <form method="post" action="/campground/<%=campground.id%>/review/<%=editreview.id%>?_method=PUT" novalidate class="validate_form" enctype="application/x-www-form-urlencoded">
                <label for="rating" class="form-label">Rating:</label>
              <fieldset class="starability-basic">
                <legend></legend>
                <input type="radio" id="first-rate1" name="review[rating]" value="1" <%=editreview.rating===1 ? 'checked' : ''%> />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" <%=editreview.rating===2 ? 'checked' : ''%> />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" <%=editreview.rating===3 ? 'checked' : ''%>/>
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" <%=editreview.rating===4 ? 'checked' : ''%>/>
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" <%=editreview.rating===5 ? 'checked' : ''%>/>
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>


            <div class="mb-3">
                <label for="msg" class="form-label">Review</label>
                <textarea class="form-control" name="review[msg]" id="msg" cols="30" rows="4" required> <%=editreview.msg%> </textarea>
            </div>


                  <button type="submit" class="btn btn-success mt-4 col-12">Create</button>
              </form>


        </div>
    </div>

