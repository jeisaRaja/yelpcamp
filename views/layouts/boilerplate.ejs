    <style>

      .yourListing{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 2rem;
      }
      .listingCard{
        display: flex;
        flex-direction: column;
        overflow: hidden;
        height: 300px;
        flex: 1 0 30%;
        min-width: 200px;
        max-width: 400px;
      }

      .imgContainerCover{
        height: 200px;
        overflow: hidden;
      }
      
      #map { height: 180px; }

      @media (max-width: 767px) { /* Change to col layout for screens smaller than 768px */
        :root {
          --lh: 1.4rem;
        }
        
        html {
          max-width: 40rem;
          margin: 2rem auto;
          line-height: var(--lh);
        }
        
        .truncate-overflow {
          --max-lines: 3;
          position: relative;
          max-height: calc(var(--lh) * var(--max-lines));
          overflow: hidden;
          padding-right: 1rem;
          text-overflow: clip;
        }
        .truncate-overflow::before {
          position: absolute;
          content: "...";
          bottom: 0;
          right: 0;
        }
        .truncate-overflow::after {
          content: "";
          position: absolute;
          right: 0;
          width: 1rem;
          height: 1rem;
          background: white;
        }
        .showCamp {
          display: flex;
          flex-direction: column;
          justify-content: center;
        }
        .showCamp > div {
          width: 100%;
        }
        .campCard{
          width: 100%;
        }
        .mobile-no-offset {
          margin-left: 0 !important;
        } 
        .text-card {
          width: 100%;
        }
        .truncate-desc{
          min-height: 200px;
        }
      }
    </style>
